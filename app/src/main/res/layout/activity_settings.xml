<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#000000">

    <TextView
        android:id="@+id/SettingsText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USTAWIENIA"
        android:textSize="50dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:layout_weight="0.15"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/SettingsText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.20"
        android:paddingLeft="20dp"
        android:text="Poziom:"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/SettingsLevel1Button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="1"
            android:textSize="20dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#00ff00"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/SettingsLevel2Button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="2"
            android:textSize="20dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#FF8C00"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/SettingsLevel3Button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="3"
            android:textSize="20dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#ff1111"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <TextView
        android:id="@+id/SettingsText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.17"
        android:paddingLeft="20dp"
        android:text="Kolor węża:"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="0.05">

        <Button
            android:id="@+id/SettingsBlackButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text=""
            android:layout_weight="1"
            android:background="#001110"/>

        <Button
            android:id="@+id/SettingsGreenButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text=""
            android:layout_weight="1"
            android:background="#00FF00"/>

        <Button
            android:id="@+id/SettingsRedButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text=""
            android:layout_weight="1"
            android:background="#ff1111"/>

        <Button
            android:id="@+id/SettingsYellowButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text=""
            android:layout_weight="1"
            android:background="#FFFF00"/>

        <Button
            android:id="@+id/SettingsBlueButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text=""
            android:layout_weight="1"
            android:background="#0000FF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal"
        android:paddingTop="70dp"
        android:layout_weight="0.50"
        >

        <Button
            android:id="@+id/SettingsSaveButton"
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:text="Zapisz"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:layout_weight="1"
            android:background="#303030"
            android:layout_margin="2dp"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/SettingsMenuButton"
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:text="Menu"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:layout_weight="1"
            android:background="#303030"
            android:layout_margin="2dp"
            android:textColor="#ffffff"/>
    </LinearLayout>



</LinearLayout>
